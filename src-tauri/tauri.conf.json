{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "duskhaven-launcher",
    "version": "2.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "https://**/*"
        ]
      },
      "fs": {
        "all": true,
        "scope": ["$APP/*", "$APP"]
      },
      "window": {
        "all": false,
        "startDragging": true,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true
      },
      "dialog": {
        "all": true, 
        "ask": true,
        "confirm": true, 
        "message": true,
        "open": true,
        "save": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.duskhaven.dev",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/laurensmarcelis/duskhaven-launcher-2/releases/latest"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk5QTVBMDA1M0NGMjUyODQKUldTRVV2SThCYUNsbVRkbTV2QXpUajZUZzlmQ083UmFvQURJaG5lVDByZ3VwSmpyT2psMnp6TmIK"
    },
    "windows": [
      {
        "decorations": false,
        "fullscreen": false,
        "resizable": false,
        "title": "Duskhaven Launcher",
        "width": 1125,
        "height": 754,
        "hiddenTitle": true,
        "maxWidth": 1125,
        "maxHeight": 754,
        "minWidth": 1125,
        "minHeight": 754
      }
    ]
  }
}
